<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.ProgressIndicator?>
<?import javafx.scene.control.ToolBar?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>

<BorderPane xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="app.controllers.GrillasController">
    <top>
        <ToolBar>
            <Button onAction="#onCloseApp" text="Cerrar" />
            <Label text="  Servers -&gt; Databases -&gt; Tables" />
        </ToolBar>
    </top>

    <center>
        <HBox spacing="10">
            <padding>
                <Insets bottom="10" left="10" right="10" top="10" />
            </padding>
            <VBox spacing="6" HBox.hgrow="ALWAYS">
                <Label text="Servidores" />
                <ListView fx:id="lvServers" prefHeight="400" prefWidth="250" />
            </VBox>
            <VBox spacing="6" HBox.hgrow="ALWAYS">
                <Label text="Bases de datos" />
                <ListView fx:id="lvDatabases" prefHeight="400" prefWidth="250" />
            </VBox>
            <VBox spacing="6" HBox.hgrow="ALWAYS">
                <Label text="Tablas" />
                <ListView fx:id="lvTables" prefHeight="400" prefWidth="380" />
            </VBox>
         <VBox spacing="6" HBox.hgrow="ALWAYS">
            <children>
               <Label text="Columnas" />
               <ListView fx:id="lvColumns" prefHeight="400" prefWidth="288.0" />
            </children>
         </VBox>
        </HBox>
    </center>

    <bottom>
        <HBox spacing="10">
            <padding>
                <Insets bottom="10" left="10" right="10" top="10" />
            </padding>
            <ProgressIndicator fx:id="progress" prefHeight="24" prefWidth="24" visible="false" />
            <Label text=" " />
            <Region HBox.hgrow="ALWAYS" />
            <Label text="ExtractorBD (JavaFX + HikariCP)" />
        </HBox>
    </bottom>
</BorderPane>
